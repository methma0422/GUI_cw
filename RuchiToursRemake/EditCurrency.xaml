<Window x:Class="RuchiToursRemake.EditCurrency"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuchiToursRemake"
        mc:Ignorable="d"
        Title="EditCurrency" Height="800" Width="950">
    <Grid Style="{StaticResource uCtrlGrid}">
        <Rectangle Style="{StaticResource EditPageRectangle}">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
        </Rectangle>

        <Label Style="{StaticResource MainTitles}" Content="Edit Currency Details" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,117,0,0"/>
        <Label Style="{StaticResource userCtrlLbls}" Content="Country" Margin="230,281,0,0"/>
        <Label Style="{StaticResource userCtrlLbls}" Content="Currency" Margin="230,0,0,0" VerticalAlignment="Center"/>
        <Label Style="{StaticResource userCtrlLbls}" Content="In LKR" Margin="230,488,0,0"/>
        <TextBox x:Name="TxtCountry" Style="{StaticResource userCtrlTxtBox}" Margin="400,281,0,0" Width="280"/>
        <TextBox x:Name="TxtCurrency" Style="{StaticResource userCtrlTxtBox}" Margin="400,0,0,0" Width="280" VerticalAlignment="Center"/>
        <TextBox x:Name="TxtInLKR" Style="{StaticResource userCtrlTxtBox}" Margin="400,488,0,0" Width="280"/>
        <Button x:Name="BtnSave" Style="{StaticResource userCtrlBtn}" Content="Save" Width="76" Margin="600,616,0,0" Click="BtnSave_Click"/>
    </Grid>
</Window>
