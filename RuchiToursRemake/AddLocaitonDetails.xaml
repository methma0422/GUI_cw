<UserControl x:Class="RuchiToursRemake.AddLocaitonDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RuchiToursRemake"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="950">
    <Grid Style="{StaticResource uCtrlGrid}">
        <Rectangle Style="{StaticResource EditPageRectangle}">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Style="{StaticResource MainTitles}" Content="Add Location Details" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,117,0,0"/>
        <Label x:Name="LblImage" Style="{StaticResource LblImage}">
            <Image x:Name="imgLocation" Height="150" Width="150"/>
        </Label>
        <Label Style="{StaticResource userCtrlLbls}" Content="Location Name" Margin="230,408,0,0"/>
        <Label Style="{StaticResource userCtrlLbls}" Content="City" Margin="230,455,0,0"/>
        <Label Style="{StaticResource userCtrlLbls}" Content="Province" Margin="230,502,0,0"/>
        <Label Style="{StaticResource userCtrlLbls}" Content="District" Margin="230,549,0,0"/>
        <TextBox x:Name="TxtLocationName" Style="{StaticResource userCtrlTxtBox}" Margin="400,408,0,0" Width="280"/>
        <TextBox x:Name="TxtCity" Style="{StaticResource userCtrlTxtBox}" Margin="400,455,0,0" Width="280"/>
        <TextBox x:Name="TxtProvince" Style="{StaticResource userCtrlTxtBox}" Margin="400,502,0,0" Width="280"/>
        <TextBox x:Name="TxtDistrict" Style="{StaticResource userCtrlTxtBox}" Margin="400,549,0,0" Width="280"/>
        <Button x:Name="BtnAddPhoto" Style="{StaticResource userCtrlBtn}" Content="Add Photo" Width="150" Margin="0,354,0,0" HorizontalAlignment="Center" Click="BtnAddPhoto_Click"/>
        <Button x:Name="BtnSave" Style="{StaticResource userCtrlBtn}" Content="Save" Width="76" Margin="600,616,0,0" Click="BtnSave_Click"/>
    </Grid>
</UserControl>
