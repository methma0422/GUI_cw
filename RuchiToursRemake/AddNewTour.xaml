<UserControl x:Class="RuchiToursRemake.AddNewTour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RuchiToursRemake"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="950">
    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <Grid x:Name="AddNewTour1" Style="{StaticResource uCtrlGrid}">
            <Label Style="{StaticResource MainTitles}" Content="Add New Tour" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,17,0,0"/>
            <Label x:Name="Guest" Style="{StaticResource userCtrlLbls}" Content="Guest" Margin="65,65,0,0"/>
            <Label x:Name="NumberOfTourMembers" Style="{StaticResource userCtrlLbls}" Content="Number Of Tour Members" Margin="65,135,0,0"/>
            <Label x:Name="Driver" Style="{StaticResource userCtrlLbls}" Content="Driver" Margin="65,207,0,0"/>
            <Label x:Name="Guide" Style="{StaticResource userCtrlLbls}" Content="Guide" Margin="65,277,0,0"/>
            <Label x:Name="Vehicle" Style="{StaticResource userCtrlLbls}" Content="Vehicle" Margin="65,347,0,0"/>
            <Label x:Name="Currency" Style="{StaticResource userCtrlLbls}" Content="Currency" Margin="65,417,0,0"/>
            <Label x:Name="StartingDate" Style="{StaticResource userCtrlLbls}" Content="Starting Date" Margin="65,487,0,0"/>
            <Label x:Name="EndingDate" Style="{StaticResource userCtrlLbls}" Content="Ending Date" Margin="685,487,0,0"/>
            <Label x:Name="Location" Style="{StaticResource userCtrlLbls}" Content="Location - " Margin="65,570,0,0"/>
            <Label x:Name="Accommodation" Style="{StaticResource userCtrlLbls}" Content="Accommodation - " Margin="65,620,0,0"/>
            <Label x:Name="Charge" Style="{StaticResource userCtrlLbls}" Content="Tour charge - " Margin="65,670,0,0"/>
            <Label x:Name="Date" Style="{StaticResource userCtrlLbls}" Content="Tour Date - " Margin="65,720,0,0"/>
            <ComboBox x:Name="ComBoxGuest" Style="{StaticResource userCtrlComBox}" Margin="65,100,0,0" Width="820"/>
            <TextBox x:Name="TxtNumberOfTM" Style="{StaticResource userCtrlTxtBox}" Margin="65,170,0,0" Width="820"/>
            <ComboBox x:Name="ComBoxDriver" Style="{StaticResource userCtrlComBox}" Margin="65,242,0,0" Width="820"/>
            <ComboBox x:Name="ComBoxGuide" Style="{StaticResource userCtrlComBox}" Margin="65,312,0,0" Width="820"/>
            <ComboBox x:Name="ComBoxVehicle" Style="{StaticResource userCtrlComBox}" Margin="65,382,0,0" Width="820"/>
            <ComboBox x:Name="ComBoxCurrency" Style="{StaticResource userCtrlComBox}" Margin="65,452,0,0" Width="820"/>
            <DatePicker x:Name="DatePickerStartDate" Style="{StaticResource datePicker}" Margin="65,522,0,0" Width="200"/>
            <DatePicker x:Name="DatePickerEndingDate" Style="{StaticResource datePicker}" Margin="685,522,0,0" Width="200"/>
            <ComboBox x:Name="ComBoxLocation" Style="{StaticResource userCtrlComBox}" Margin="212,570,0,0" Width="673"/>
            <ComboBox x:Name="ComboxAccomo" Style="{StaticResource userCtrlComBox}" Margin="212,620,0,0" Width="673"/>
            <TextBox x:Name="TxtCharge" Style="{StaticResource userCtrlTxtBox}" Margin="212,670,0,0" Width="673"/>
            <DatePicker x:Name="DateTimePickerLocation" Style="{StaticResource datePicker}" Margin="212,720,0,0" Width="360"/>
            <CheckBox x:Name="CheckAccommodation" Content="Already Booked an Accommodation" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="20" FontFamily="Microsoft Tai Le" FontSize="14" Margin="635,655,0,0"/>

            <Button x:Name="BtnSave" Style="{StaticResource userCtrlBtn}" Content="Save" Margin="810,745,0,0" Width="75" Click="BtnSave_Click" RenderTransformOrigin="0.5,1.904"/>
        </Grid>
    </ScrollViewer>
</UserControl>
