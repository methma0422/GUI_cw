<Window x:Class="RuchiToursRemake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuchiToursRemake"
        mc:Ignorable="d"
        Title="Login" Height="799" Width="1250" WindowStartupLocation="CenterScreen">
    <Grid Width="1250" Height="800" Margin="0,-35,0,-51">
        <Grid.Background>
            <ImageBrush ImageSource="/ali-maah-zyOeEm4NsPM-unsplash.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Rectangle Style="{StaticResource Rectangles}"/>
        <Label Style="{StaticResource MainTitles}" Content="Login" Margin="572,170,572,580" Width="107" Height="50"/>
        <Label Style="{StaticResource LoginPageLables}" Content="Username" Margin="475,270,665,486" Width="110" Height="38"/>
        <TextBox x:Name="TxtUsername" Style="{StaticResource LoginPageTxtB}" HorizontalAlignment="Center" Margin="0,313,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="TxtUsername_TextChanged" />
        <Label Style="{StaticResource LoginPageLables}" Content="Password" Margin="475,371,665,391" Width="110" Height="38"/>
        <PasswordBox x:Name="TxtPassword" 
             HorizontalAlignment="Center" 
             Margin="0,414,0,0" 
             VerticalAlignment="Top" 
             PasswordChanged="TxtPassword_PasswordChanged" Width="300" Height="38" />
        <Button x:Name="BtnLogin" Style="{StaticResource LoginPageBtn}" Content="Login" HorizontalAlignment="Center" Margin="0,502,0,0" VerticalAlignment="Top" Background="#FF74C2C2" BorderBrush="#FF2D7B7B" Click="BtnLogin_Click"/>
        <Button x:Name="BtnRegister" Style="{StaticResource LoginPageBtn}" Content="Register" HorizontalAlignment="Center" Margin="0,560,0,0" VerticalAlignment="Top" Click="BtnRegister_Click"/>

    </Grid>
</Window>
