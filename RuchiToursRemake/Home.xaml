<Window x:Class="RuchiToursRemake.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuchiToursRemake"
        mc:Ignorable="d"
        Title="Home" Height="800" Width="1250" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">
    <Grid Width="1250" Height="800">
        <Grid.Background>
            <ImageBrush ImageSource="/ali-maah-zyOeEm4NsPM-unsplash.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Left" Height="800" Width="300" Stroke="White" VerticalAlignment="Top" StrokeThickness="2" Margin="0,-15,0,0">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF3AA9AD" Opacity="0.6"/>
            </Rectangle.Fill>
        </Rectangle>

        <Label x:Name="RuchiTuors" Content="Ruchi Tuors" HorizontalAlignment="Left" Margin="62,37,0,0" VerticalAlignment="Top" FontFamily="Microsoft Uighur" FontSize="48" Height="45" Width="176"/>
        <Button x:Name="BtnHome" HorizontalAlignment="Left" Margin="62,99,0,0" VerticalAlignment="Top" Width="38" Height="38" BorderThickness="0,0,0,0" BorderBrush="#FF171717" Click="BtnHome_Click" >
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/home.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnLogout" HorizontalAlignment="Left" Margin="200,99,0,0" VerticalAlignment="Top" Width="38" Height="38" BorderThickness="0,0,0,0" BorderBrush="#FF171717" Click="BtnLogout_Click">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/logout001.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BtnAddNewTour" Style="{StaticResource HomeSideBtn}" Margin="62,184,0,0" Content="Add New Tour" Click="BtnAddNewTour_Click"/>
        <Button x:Name="BtnViewTours" Style="{StaticResource HomeSideBtn}" Margin="62,244,0,0" Content="View Tours" Click="BtnViewTours_Click"/>
        <Button x:Name="BtnGuestDetails" Style="{StaticResource HomeSideBtn}" Margin="62,364,0,0" Content="Guest Details" Click="BtnGuestDetails_Click"/>
        <Button x:Name="BtnDrivers" Style="{StaticResource HomeSideBtn}" Margin="62,424,0,0" Content="Drivers" Click="BtnDrivers_Click"/>
        <Button x:Name="BtnGuides" Style="{StaticResource HomeSideBtn}" Margin="62,484,0,0" Content="Guides" Click="BtnGuides_Click"/>
        <Button x:Name="BtnVehicles" Style="{StaticResource HomeSideBtn}" Margin="62,544,0,0" Content="Vehicles" Click="BtnVehicles_Click"/>
        <Button x:Name="BtnCurrencies" Style="{StaticResource HomeSideBtn}" Margin="62,604,0,0" Content="Currencies" Click="BtnCurrencies_Click"/>
        <Button x:Name="BtnLocations" Style="{StaticResource HomeSideBtn}" Margin="62,664,0,0" Content="Locations" Click="BtnLocations_Click"/>
        <Button x:Name="BtnAccomodation" Style="{StaticResource HomeSideBtn}" Margin="62,724,0,0" Content="Hotels &amp; Accomodation" Click="BtnAccomodation_Click"/>
        <local:AddAccommodationDetails x:Name="AddAccomodation2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:AddLocaitonDetails x:Name="AddLocation2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:AddCurrencyDetails x:Name="AddCurrency2"  HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:AddVehicleDetails x:Name="AddVehicle2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:AddGuideDetails x:Name="AddGuide2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:AddDriverDetails x:Name="AddDriver2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:AddGuestDetails x:Name="AddGuest2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:HotelAndAccommodation x:Name="Accommodation2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:Locations x:Name="Locations2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:Currency x:Name="Currency2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:Vehicles x:Name="Vehicles2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:Guides x:Name="Guide2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:Driver x:Name="Driver2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:GuestDetails x:Name="GuestDetails2" HorizontalAlignment="Left"  Margin="300,0,0,0" VerticalAlignment="Top" Height="800"/>
        <local:ViewTours x:Name="ViewTours2" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Top" Height="785"/>
        <local:AddNewTour x:Name="AddNewTour2" HorizontalAlignment="Left"  Margin="300,-15,0,0" VerticalAlignment="Top" Height="800"/>


    </Grid>
</Window>
